<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="admin_code_form_view" model="ir.ui.view">
            <field name="name">admin.segment.form</field>
            <field name="model">admin.segment</field>
            <field name="arch" type="xml">
                <form string="Admin Code Segment Form">

                    <sheet>
                        <separator string="General" colspan="4"/>
                            <group colspan="4" col="4">
                                    <field name="name"/>
                                    <field name="code"/>
                            </group>
                    </sheet>
                </form>
            </field>


        </record>

        <record id="admin_code_form_tree_view" model="ir.ui.view">
            <field name="name">admin.segment.form.tree</field>
            <field name="model">admin.segment</field>
            <field name="arch" type="xml">
                <tree string="Admin Segment Information">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>

        </record>

        <record model="ir.actions.act_window" id="admin_segment_list_action">
            <field name="name">Admin Segment Config</field>
            <field name="res_model">admin.segment</field>
            <field name="view_mode">tree,form</field>
        </record>


         <record id="admin_segment_list_action" model="ir.actions.act_window">
            <field name="name">Admin Segment Config</field>
            <field name="res_model">admin.segment</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_app':1}</field>
            <field name="help" type="html">
              <p><b>No record found!</b></p>
              <p>You should try others search criteria or create Admin Segment Code</p>
            </field>
        </record>



        <!--<menuitem id="admin_session_menu" name="Admin Segment"  action="admin_segment_list_action" web_icon="coa_code,static/src/img/admin_seg.png" groups="base.group_system,access_right.group_gl,base.group_erp_manager"/>-->
        <menuitem id="coa_segment_session_menu" name="COA Segments"  action="admin_segment_list_action" web_icon="coa_code,static/src/img/coa_seg.png" groups="base.group_system,access_right.group_gl,base.group_erp_manager"/>
        <menuitem id="coa_segment_config_menu" name="COA Configuration"  parent="coa_segment_session_menu" groups="base.group_system,access_right.group_gl,base.group_erp_manager"/>
        <menuitem id="admin_segment_menu" name="Admin Segment"  parent="coa_segment_config_menu" action="admin_segment_list_action" sequence="1" groups="base.group_system,access_right.group_gl,base.group_erp_manager"/>

    </data>
</odoo>
