            </field>
        </record>
        
        <menuitem id="fund_segment_menu" parent="coa_code.coa_segment_config_menu" action="fund_segment_list_action" name="Fund Segment" sequence="5"  groups="base.group_system,base.group_gl,base.group_erp_manager"/>
